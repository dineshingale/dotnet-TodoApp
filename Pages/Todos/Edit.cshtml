@page
@model MyTodoApp.Pages_Todos.EditModel

@{
    ViewData["Title"] = "Edit Task";
}

<div class="max-w-lg mx-auto mt-10">
    <div class="bg-white p-8 rounded-xl shadow-lg border border-gray-100">
        
        <h1 class="text-2xl font-bold text-gray-800 mb-6">Edit Task</h1>

        <form method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>
            
            <input type="hidden" asp-for="TodoItem.Id" />

            <div>
                <label asp-for="TodoItem.Title" class="block text-sm font-medium text-gray-700 mb-1">Task Title</label>
                <input asp-for="TodoItem.Title" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all" />
                <span asp-validation-for="TodoItem.Title" class="text-red-500 text-xs mt-1 block"></span>
            </div>

            <div class="flex items-center p-4 bg-gray-50 rounded-lg border border-gray-100">
                <input class="h-5 w-5 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded cursor-pointer" asp-for="TodoItem.IsCompleted" />
                <label class="ml-3 block text-sm font-medium text-gray-700 cursor-pointer" asp-for="TodoItem.IsCompleted">
                    Task Completed
                </label>
            </div>

            <div class="flex items-center justify-between pt-4">
                <a asp-page="./Index" class="text-sm text-gray-600 hover:text-gray-900 font-medium">
                    ‚Üê Back to List
                </a>
                <input type="submit" value="Save Changes" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-6 rounded-lg shadow-md transition-all cursor-pointer" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}